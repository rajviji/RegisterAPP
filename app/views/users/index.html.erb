<div class="main">
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">User Details</h2>
                        <div class="user_details">
                        	<p>First Name : <%= @user_all.first.first_name%></p>
                        	<p>Last Name : <%= @user_all.first.last_name%></p>
                        	<p>User Name : <%= @user_all.first.username%></p>
                        	<p>Email : <%= @user_all.first.email%></p>
                        	<p>City: <%= @user_all.first.city%></p>
                        </div>

                     </div>
                    <div class="signup-image">
                        <figure><img src="/assets/userdetail.jpg" alt="user image"></figure>
                        <%= link_to 'Logout',users_logout_path, method: :post,  class: 'signup-image-link' %>
                    </div>
                        
                </div>
            </div>
        </section>
</div>
